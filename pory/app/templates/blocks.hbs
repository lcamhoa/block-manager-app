<div class="jumbotron p-a m-t-lg">
    <h1>
        Blocks
    </h1>

    <p class="lead">
        Here you can view and manage blocks.
    </p>

    <hr class="m-y">

    <p class="lead">
    {{#if model.surveyors.length }}
        <button class="btn btn-secondary" data-toggle="modal" data-target="#createBlockorModal">
            <span class="fa fa-plus-circle"></span>
            Create
        </button>
    {{else}}
        <button class="btn btn-secondary disabled" title="Please add surveyor first by clicking top right Sureysor " data-toggle="modal" data-target="#createBlockorModal">
            <span class="fa fa-plus-circle"></span>
            Create
        </button>
    {{/if}}
    </p>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            {{block-create-form surveyors=model.surveyors process=(action 'createBlock')}}
            {{block-edit-form surveyors=model.surveyors process=(action 'editBlock')}}

            {{block-index-table blocks=model.blocks deleteBlock=(action 'deleteBlock')}}
        </div>
    </div>
</div>
